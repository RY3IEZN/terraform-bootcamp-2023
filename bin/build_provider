#! /usr/bin/bash

# navigate to the customer provider
echo "navigate to the provider folder"
cd /home/ubuntu/terraform-bootcamp-2023/terraform-provider-terratownsz


echo "copy the terraformrc to .terraformrc "
cp /home/ubuntu/terraform-bootcamp-2023/terraformrc /home/ubuntu/terraform-bootcamp-2023/.terraformrc

echo "if already exist delete"
rm -rf /home/ubuntu/.terraform.d/plugins
rm -rf /home/ubuntu/terraform-bootcamp-2023/.terraform
rm -rf /home/ubuntu/terraform-bootcamp-2023/.terraform.lock.hcl

echo "go build binary"
go build -o terraform-provider-terratownsz_v1.0.0

echo "creating the directory"
mkdir -p ~/.terraform.d/plugins/local.provider/local/terratownsz/1.0.0/x86_64
mkdir -p ~/.terraform.d/plugins/local.provider/local/terratownsz/1.0.0/linux_amd64

echo "copy binary to both file"
cp terraform-provider-terratownsz_v1.0.0 ~/.terraform.d/plugins/local.provider/local/terratownsz/1.0.0/linux_amd64
cp terraform-provider-terratownsz_v1.0.0 ~/.terraform.d/plugins/local.provider/local/terratownsz/1.0.0/x86_64